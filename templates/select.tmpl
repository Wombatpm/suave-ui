<span>
	<span class="su-select" ng-style="{'width': width + 'px'}">
		<input type="hidden" name="{{name}}" value="{{current.value}}" />
		<span class="su-current" ng-class="className">
			<span class="su-inner">
				{{current.body}} <i class="fa fa-caret-down"></i>
			</span>
		</span>
		<span class="su-options" ng-class="{'su-visible': visible}">
			<span class="su-option"
			      ng-repeat="option in options"
			      ng-click="select(option)">
				{{option.body}}
			</span>
		</span>
	</span>
</span>
