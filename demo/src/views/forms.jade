extends ../partials/layout.jade

block vars
	- page = 'forms'
	- pageTitle = 'Forms'

block content
	div.su-row: div.su-box
		h1 Forms

		form(name="sampleForm")
			input.su-focused.su-mr10(type="text", placeholder="Placeholder")
			input.su-invalid.su-mr10(type="text", placeholder="Invalid field")
			input.su-mr10(type="text", value="Disabled", disabled)
			input.su-mr10(type="text", su-placeholder="$")
			input.su-mr10(type="text", su-placeholder-right="meters", style="width: 50px")
			input.su-mr10(type="text", su-placeholder-right="meters", su-width="100")

		div.su-clear
		br

		div.su-input-group
			input(type="text", su-placeholder="$", su-width="100")
			input(type="text", su-placeholder-right="meters", style="width: 50px")
			input(type="text", su-placeholder-right="meters", su-width="100")

		div.su-clear
		br

		div.su-input-group
			input(type="text")
			input(type="text")
			input(type="text")
